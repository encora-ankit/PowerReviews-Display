<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>
            Write a review
        </title>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" template="PowerReviews_ReviewDisplay::writereview.phtml">
                 <arguments>
                    <argument name="view_model" xsi:type="object">PowerReviews\ReviewDisplay\ViewModel\Product</argument>
                 </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="after.body.start">
            <block class="Magento\Framework\View\Element\Template" template="PowerReviews_ReviewDisplay::afterbody.phtml" before="-" />
        </referenceContainer>
    </body>
</page>
